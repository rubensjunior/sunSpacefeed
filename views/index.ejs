<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="index" appConnect="local" components="{dmxServerConnect:{},dmxValidator:{},dmxPreloader:{}}" -->
<dmx-preloader id="preloader1" spinner="cubeGrid" bgcolor="#0c0c0c" color="#3699FF" size="56"></dmx-preloader>
<meta name="ac:route" content="/">
<meta charset="UTF-8">
<meta name="language" content="pt-BR">

<div class="min-vh-100 d-flex align-items-center justify-content-center flex-column">
    <img src="/assets/images/spacefeed-white.png" class="img-fluid mb-5" width="240">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="sp-container login-form">
                    <!-- Logo ou Marca -->
                    <div class="text-center mb-4">
                    </div>

                    <!-- Formulário de Login -->
                    <form is="dmx-serverconnect-form" id="login_form" method="post" action="/api/autenticacao/login" dmx-on:error="alertas.danger('Ocorreu um erro!')" dmx-on:success="navegacao.goto('/selecionar-empresa')">
                        <div class="mb-3">
                            <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Endereço de e-mail" required>
                        </div>
                        <div class="mb-4">
                            <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Senha" required>
                        </div>

                        <!-- Lembrar-me e Esqueci a senha -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="remember" name="remember">
                                <label class="form-check-label" for="remember">
                                    Lembrar-me
                                </label>
                            </div>
                            <a href="/esqueci-senha" class="text-primary text-decoration-none">Esqueceu a senha?</a>
                        </div>

                        <!-- Botão de envio -->
                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg fs-6" type="submit">
                                <span dmx-hide="login_form.state.executing">Entrar</span>
                                <span dmx-show="login_form.state.executing">
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    Entrando...
                                </span>
                            </button>
                        </div>

                        <!-- Mensagem de erro -->
                        <div class="alert alert-danger mt-3" role="alert" dmx-show="login_form.lastError.response">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <span dmx-text="login_form.lastError.response"></span>
                        </div>
                    </form>

                    <!-- Link para cadastro -->
                    <div class="text-center mt-4">
                        <p class="mb-0">Não tem uma conta? </p>
                        <a href="/sign-up">Crie uma agora!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>