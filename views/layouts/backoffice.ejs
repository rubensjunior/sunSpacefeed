<!doctype html>
<html>

<head>
  <base href="/">
  <script src="/dmxAppConnect/dmxAppConnect.js"></script>
  <meta charset="UTF-8">
  <title>Backoffice Spacefeed</title>

  <!-- Set dark theme by default -->
  <meta name="color-scheme" content="dark">

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/bootstrap/5/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <script src="/dmxAppConnect/dmxRouting/dmxRouting.js" defer></script>
  <script src="/dmxAppConnect/dmxBrowser/dmxBrowser.js" defer></script>
  <link rel="stylesheet" href="/dmxAppConnect/dmxNotifications/dmxNotifications.css" />
  <script src="/dmxAppConnect/dmxNotifications/dmxNotifications.js" defer></script>
  <script src="/dmxAppConnect/dmxBootstrap5Navigation/dmxBootstrap5Navigation.js" defer></script>
  <script src="/dmxAppConnect/dmxBootstrap5Modal/dmxBootstrap5Modal.js" defer></script>
</head>

<body is="dmx-app" id="backoffice">
  <dmx-serverconnect id="atualizarempresausuario" url="/api/negocios/selecionar-empresa" noload="true"></dmx-serverconnect>

  <dmx-notifications id="alertas"></dmx-notifications>
  <div is="dmx-browser" id="navegacao"></div>
  <dmx-serverconnect id="deslogar" noload="true" url="/api/autenticacao/logout" credentials="true" dmx-on:success="navegacao.goto('/')"></dmx-serverconnect>
  <dmx-serverconnect id="minhasempresas" url="/api/negocios/listar-empresa"></dmx-serverconnect>
  <dmx-serverconnect id="meuusuario" credentials="true" url="/api/autenticacao/usuario-logado"></dmx-serverconnect>

  <header>
    <div class="container py-3">
      <div class="row g-3 align-items-center">
        <div class="col-6 col-md-auto d-flex align-items-center order-1">
          <a href="/security/backoffice/" class="d-flex align-items-center" internal="true">
            <img src="/assets/images/Ícone 2_fundo preto.png" width="56">
          </a>
        </div>

        <div class="col-12 col-md-auto order-3 order-md-2">
          <div class="input-group input-group-lg" style="min-width: 280px;">
            <select class="form-select bg-dark border-end-0 text-white fs-7" style="background-color: var(--sp-container) !important;" dmx-bind:options="minhasempresas.data.query_empresas" optiontext="nome_polo" optionvalue="id_empresa" id="empresas" name="empresas">
              <option value="">Selecione uma empresa</option>
            </select>
            <button class="btn btn-primary fs-7 px-3" title="Confirmar seleção" dmx-on:click="atualizarempresausuario.load({id_empresa_selecionada: empresas.selectedValue})">
              <i class="fas fa-check"></i>
            </button>
          </div>
        </div>
        <div class="col-6 col-md-auto d-flex justify-content-end order-2 order-md-3 ms-md-auto">
          <div class="dropdown">
            <button class="btn btn-profile dropdown-toggle d-flex align-items-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <div class="d-flex align-items-center">
                <img src="/assets/images/avatar.png" alt="Profile" class="rounded" width="40" height="40" style="object-fit: cover">
                <div class="ms-2 text-start d-none d-sm-block" style="min-width: 120px">
                  <span class="d-block fw-semibold fs-7 text-white">{{meuusuario.data.dados_usuario.nome_tratamento}}</span>
                  <small class="d-block fs-8 text-white">{{meuusuario.data.dados_usuario.nome_polo}}</small>
                </div>
              </div>
            </button>
            <div class="dropdown-menu dropdown-menu-end">
              <div class="p-3" style="background-color: var(--sp-container);">
                <div class="d-flex align-items-center">
                  <img src="/assets/images/avatar.png" alt="Profile" class="rounded" width="40" height="40" style="object-fit: cover">
                  <div class="ms-3 text-start">
                    <h6 class="mb-1 fw-semibold fs-7 text-white">{{meuusuario.data.dados_usuario.nome_tratamento}}</h6>
                    <div class="fs-8 text-white">{{meuusuario.data.dados_usuario.email}}</div>
                  </div>
                </div>
              </div>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i>Meu perfil</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item text-danger" href="#" dmx-on:click="deslogar.load()"><i class="fas fa-sign-out-alt me-2"></i> Logout</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Second Header -->
  <div class="menu-header">
    <div class="container py-4">
      <div class="row align-items-center justify-content-between">
        <div class="col-auto d-md-none">
          <button class="btn btn-dark border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#menuOffcanvas">
            <i class="fas fa-bars"></i>
          </button>
        </div>
        <div class="col d-none d-md-block">
          <nav class="nav gap-2 flex-wrap">
            <a class="nav-link" href="/security/backoffice/colaboradores" internal="true">Colaboradores</a>
            <a class="nav-link" href="/security/backoffice/unidades-polos" internal="true">Unidades/Polos</a>
            <a class="nav-link" href="/security/backoffice/postagens" internal="true">Postagens</a>
            <a class="nav-link" href="/security/backoffice/notificacoes-push" internal="true">Notificações Push</a>
            <a class="nav-link" href="/security/backoffice/suporte-aluno" internal="true">Suporte ao aluno</a>
          </nav>
        </div>
        <div class="col-auto ms-auto">
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Offcanvas -->
  <div class="offcanvas offcanvas-start" tabindex="-1" id="menuOffcanvas" data-bs-theme="dark">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title">Menu</h5>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <div class="nav flex-column">
        <a class="nav-link" href="/security/backoffice/colaboradores" internal="true" data-bs-toggle="offcanvas" data-bs-target="#menuOffcanvas">Colaboradores</a>
        <a class="nav-link" href="/security/backoffice/unidades-polos" internal="true">Unidades/Polos</a>
        <a class="nav-link" href="/security/backoffice/postagens" internal="true">Postagens</a>
        <a class="nav-link" href="/security/backoffice/notificacoes-push" internal="true">Notificações Push</a>
        <a class="nav-link" href="/security/backoffice/suporte-aluno" internal="true">Suporte ao aluno</a>
      </div>
    </div>
  </div>

  <main class="container mt-4">
    <div class="row">
      <div class="col" is="dmx-view" id="content">
        <%- await include(content, locals); %>
      </div>
    </div>
  </main>

  <script src="/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</body>

</html>